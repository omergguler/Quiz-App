@page "/my-performance"
@model PropayTest.Pages.MyPerformance.MyPerformanceModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>My Permance</title>
    <link rel="stylesheet" href="~/css/MyPerformance.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


</head>

<body>


    @if (Model.User != null)
    {
        <a href="/profile" class="nav-link">Go Back To Profile</a>
        <div class="custom-container">

            <div class="section-performance-container">
                <div class="card">
                    <img class="card-img-top" src="@Model.quizCreationImg" alt="">
                    <div class="card-body" style="padding: 0;">
                        <p class="card-text">@Model.quizCreationMsg</p>
                    </div>
                </div>
                <div class="card">
                    <img class="card-img-top" src="@Model.questionCreationImg" alt="">
                    <div class="card-body" style="padding: 0;">
                        <p class="card-text">@Model.questionCreationMsg</p>
                    </div>
                </div>
                <div class="card">
                    <img class="card-img-top" src="@Model.quizzesGotSolvedImg" alt="">
                    <div class="card-body" style="padding: 0;">
                        <p class="card-text">@Model.quizzesGotSolvedMsg</p>
                    </div>
                </div>
            </div>

            <div class="section-performance-container">
                <div class="card">
                    <img class="card-img-top" src="@Model.quizzesSolvedImg" alt="">
                    <div class="card-body" style="padding: 0;">
                        <p class="card-text">@Model.quizzesSolvedMsg</p>
                    </div>
                </div>
            </div>

        </div>


    }
    else
    {
        <p>User not found or you are not authorized to view this profile.</p>
    }

    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>


</html>